<%- include('page-header') -%>

<div class="py-28 md:py-8 clear-both relative">
	<div class="max-w-[1100px] mx-auto px-4 relative">
		<div class="flex flex-wrap">
			<div class="w-full">
				<div class="w-full md:w-6/12 animate-box mb-8 md:mb-0">

					<% if (typeof success === 'string') { %>
                    <div class="bg-green-500 text-white p-4 rounded mb-4" role="alert">
                        <%=success%>
                    </div>
                    <% } %>
                    <% if (typeof error === 'string') { %>
                    <div class="bg-red-500 text-white p-4 rounded mb-4" role="alert"> <strong>Ops!</strong> <%=error%>
                    </div>
                    <% } %>

					<h3 class="text-2xl mb-5 text-black font-normal">Entre em Contato</h3>
					<form action="/contact" method="POST">
						<div class="mb-4">
							<div class="w-full">
								<label class="sr-only" for="name">Nome</label>
								<input type="text" name="name" id="name" class="w-full h-[46px] px-4 text-base font-light bg-transparent border-2 border-black/10 focus:border-[#FBB448] focus:outline-none transition-colors" placeholder="Seu nome" value="<%=body.name%>">
							</div>
						</div>
						<div class="mb-4">
							<div class="w-full">
								<label class="sr-only" for="email">E-mail</label>
								<input type="text" name="email" id="email" class="w-full h-[46px] px-4 text-base font-light bg-transparent border-2 border-black/10 focus:border-[#FBB448] focus:outline-none transition-colors" placeholder="Seu endereço de e-mail" value="<%=body.email%>">
							</div>
						</div>
						<div class="mb-4">
							<div class="w-full">
								<label class="sr-only" for="message">Mensagem</label>
								<textarea name="message" id="message" cols="30" rows="10" class="w-full px-4 py-2 text-base font-light bg-transparent border-2 border-black/10 focus:border-[#FBB448] focus:outline-none transition-colors resize-none" placeholder="Escreve alguma coisa"><%=body.message%></textarea>
							</div>
						</div>
						<div class="mb-4">
							<input type="submit" value="Enviar" class="bg-[#FBB448] text-white border-2 border-[#FBB448] px-8 py-2 rounded text-base transition-all duration-500 hover:bg-[#fcbe61] hover:border-[#fcbe61] cursor-pointer">
						</div>

					</form>
				</div>
				<div class="w-full md:w-5/12 md:ml-[8.333333%] animate-box">

					<div class="mb-8 float-left w-full relative">
						<h3 class="text-2xl mb-5 text-black font-normal">Informações de Contato</h3>
						<ul class="p-0 m-0">
							<li class="address pl-[50px] mb-8 list-none relative">Rua Ademar Saraiva Leão, 234<br> Alvarenga, São Bernardo do Campo - SP</li>
							<li class="phone pl-[50px] mb-8 list-none relative"><a href="tel://1234567890" class="text-[#FBB448] hover:text-[#FBB448] transition-colors">+1 234 567 890</a></li>
							<li class="email pl-[50px] mb-8 list-none relative"><a href="mailto:contato@hcode.com.br" class="text-[#FBB448] hover:text-[#FBB448] transition-colors">contato@hcode.com.br</a></li>
							<li class="url pl-[50px] mb-8 list-none relative"><a href="https://www.hcode.com.br" class="text-[#FBB448] hover:text-[#FBB448] transition-colors">Hcode.com.br</a></li>
						</ul>
					</div>


				</div>
			</div>
		</div>
	</div>
</div>

<%- include('page-footer') -%>