<header id="gtco-header" class="bg-[#4d4d4d] bg-cover bg-center bg-no-repeat relative float-left w-full h-[900px] md:h-[600px]" role="banner" style="background-image: url(images/img_bg_1.jpg)"
    data-stellar-background-ratio="0.5">
    <div class="absolute inset-0 bg-black/50 z-1"></div>
    <div class="max-w-[1100px] mx-auto px-4 relative z-10">
        <div class="flex flex-wrap">
            <div class="w-full md:w-12/12">

                <div class="flex flex-wrap mt-[7em] md:mt-0">
                    <div class="w-full md:w-7/12 mb-12 md:mb-0 mt-text animate-box" data-animate-effect="fadeInUp">
                        <span class="text-sm uppercase text-white/50 tracking-[0.15em] block mb-2.5">Feito por
                            <a href="https://www.hcode.com.br" target="_blank" class="text-white/50 hover:text-white transition-colors">Hcode.com.br</a>
                        </span>
                        <h1 class="font-['Kaushan_Script',cursive] text-white text-[64px] md:text-[34px] leading-normal md:leading-[1.2] font-light mb-0 md:mb-2.5">Restaurante Saboroso!</h1>
                    </div>
                    <div class="w-full md:w-4/12 md:ml-[8.333333%] animate-box" data-animate-effect="fadeInRight">
                        <div class="border-t-[10px] border-[#FBB448] relative w-full shadow-[0px_2px_5px_0px_rgba(0,0,0,0.15)]">
                            <div class="tab">

                                <div class="z-10 relative clear-both bg-black/50 p-8">
                                    <div class="tab-content-inner active block" data-content="signup">
                                        <h3 class="font-['Kaushan_Script',cursive] text-white mb-4">Reserva de mesa</h3>
                                        <form action="/reservation" method="POST">
                                            <div class="mb-4">
                                                <div class="w-full">
                                                    <label for="inputName" class="text-white/80 block mb-2">Nome</label>
                                                    <input type="text" id="inputName" name="name" class="w-full h-[46px] px-4 text-base font-light bg-transparent border-2 border-white/20 text-white focus:border-[#FBB448] focus:outline-none transition-colors">
                                                </div>
                                            </div>
                                            <div class="mb-4">
                                                <div class="w-full">
                                                    <label for="inputEmail" class="text-white/80 block mb-2">E-mail</label>
                                                    <input type="email" id="inputEmail" name="email" class="w-full h-[46px] px-4 text-base font-light bg-transparent border-2 border-white/20 text-white focus:border-[#FBB448] focus:outline-none transition-colors">
                                                </div>
                                            </div>
                                            <div class="mb-4">
                                                <div class="w-full">
                                                    <label for="inputPeople" class="text-white/80 block mb-2">Pessoas</label>
                                                    <select id="inputPeople" name="people" class="w-full h-[46px] px-4 text-base font-light bg-transparent border-2 border-white/20 text-white focus:border-[#FBB448] focus:outline-none transition-colors">
                                                        <option value="" class="text-black"> -- selecione -- </option>
                                                        <option value="1" class="text-black">1</option>
                                                        <option value="2" class="text-black">2</option>
                                                        <option value="3" class="text-black">3</option>
                                                        <option value="4" class="text-black">4</option>
                                                        <option value="5+" class="text-black">5+</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="mb-4">
                                                <div class="w-full">
                                                    <label for="inputDate" class="text-white/80 block mb-2">Data</label>
                                                    <input type="text" id="inputDate" name="date" class="w-full h-[46px] px-4 text-base font-light bg-transparent border-2 border-white/20 text-white focus:border-[#FBB448] focus:outline-none transition-colors">
                                                </div>
                                            </div>
                                            <div class="mb-4">
                                                <div class="w-full">
                                                    <label for="inputTime" class="text-white/80 block mb-2">Hora</label>
                                                    <input type="text" id="inputTime" name="time" class="w-full h-[46px] px-4 text-base font-light bg-transparent border-2 border-white/20 text-white focus:border-[#FBB448] focus:outline-none transition-colors">
                                                </div>
                                            </div>

                                            <div class="mb-4">
                                                <div class="w-full">
                                                    <input type="submit" class="w-full bg-[#FBB448] text-white border-2 border-[#FBB448] px-8 py-2 rounded text-base transition-all duration-500 hover:bg-[#fcbe61] hover:border-[#fcbe61] cursor-pointer" value="Reservar Agora">
                                                </div>
                                            </div>
                                        </form>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</header>