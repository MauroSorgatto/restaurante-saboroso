<div class="py-28 md:py-8 clear-both relative">
    <div class="max-w-[1100px] mx-auto px-4 relative">
        <div class="flex flex-wrap">
            <div class="w-full md:w-8/12 md:mx-auto text-center mb-20 md:mb-8">
                <h2 class="font-['Kaushan_Script',cursive] text-[#FBB448] text-5xl md:text-[26px] mb-2.5 leading-normal font-light relative">Pratos Populares</h2>
                <p class="text-xl md:text-base leading-normal text-gray-500 mb-5">Mussum Ipsum, cacilds vidis litro abertis. Diuretics paradis num copo é motivis de denguis. Quem num
                    gosta di mé, boa
                    gentis num é.</p>
            </div>
        </div>
        <div class="flex flex-wrap">

            <% menus.forEach(function(menu){ %>
            <div class="w-full sm:w-1/2 lg:w-1/3 mb-8">
                <a href="<%=menu.photo%>" class="block w-full relative bg-white overflow-hidden z-[9] mb-8 shadow-[0px_1px_2px_0px_rgba(0,0,0,0.18)] transition-all duration-300 hover:shadow-[0px_1px_20px_0px_rgba(0,0,0,0.19)] hover:-bottom-2 image-popup">
                    <figure class="h-[240px] overflow-hidden z-[12] relative">
                        <div class="overlay opacity-0 invisible z-[10] absolute inset-0 bg-black/40 transition-all duration-700">
                            <i class="ti-plus text-white text-3xl absolute top-1/2 left-1/2 -ml-[15px] -mt-[45px] transition-all duration-300"></i>
                        </div>
                        <img src="<%=menu.photo%>" alt="Image" class="w-full h-full object-cover z-[8] transition-transform duration-300 hover:scale-125">
                    </figure>
                    <div class="fh5co-text px-2.5 pb-2.5 pt-0 text-center relative z-[22]">
                        <h2 class="text-xl font-normal m-0 mb-2.5 text-[#FBB448]">
                            <%=menu.title%>
                        </h2>
                        <p class="text-black transition-colors duration-500 mb-5">
                            <%=menu.description%>
                        </p>
                        <p class="mb-0">
                            <span class="price font-['Kaushan_Script',cursive] text-3xl text-[#FBB448] relative">
                                <%=menu.price%></span>
                        </p>
                    </div>
                </a>
            </div>
            <% }); %>

        </div>
    </div>
</div>