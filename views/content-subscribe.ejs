<div id="gtco-subscribe" class="bg-[#0098EF] py-28 md:py-8 clear-both relative">
    <div class="max-w-[1100px] mx-auto px-4 relative">
        <div class="flex flex-wrap animate-box">
            <div class="w-full md:w-8/12 md:mx-auto text-center mb-8">
                <h2 class="font-['Kaushan_Script',cursive] text-white text-5xl md:text-[26px] mb-2.5 leading-normal font-light relative">Se inscrever</h2>
                <p class="text-white/50 text-xl md:text-base leading-normal mb-5">Receba as novidades do nosso restaurante</p>
            </div>
        </div>
        <div class="flex flex-wrap animate-box">
            <div class="w-full md:w-8/12 md:mx-auto">
                <form class="flex flex-wrap items-end" action="/subscribe" method="post" id="form-subscribe">
                    <div class="w-full sm:w-1/2 mb-2.5 sm:mb-0 sm:pr-2">
                        <div class="w-full">
                            <label for="email" class="sr-only">E-mail</label>
                            <input type="email" class="w-full h-[46px] px-4 text-base bg-transparent text-white border-2 border-white/20 focus:border-white/80 focus:outline-none transition-all duration-500 placeholder:text-white" id="email" placeholder="Seu E-mail" name="email">
                        </div>
                    </div>
                    <div class="w-full sm:w-1/2 sm:pl-2">
                        <button type="submit" class="w-full h-[46px] border-none bg-[#FBB448] text-white text-base uppercase font-normal px-12 py-2 rounded transition-all duration-500 hover:bg-[#fcbe61]">Inscrever</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/js/hcode-formsave.js"></script>
<script>

    let formSubscribe = document.querySelector('#form-subscribe');

    formSubscribe.submitAjax({
        success: () => {
            alert('E-mail inscrito!');
            formSubscribe.reset();
        },
        failure: error => {
            alert(error);
        }
    });
</script>